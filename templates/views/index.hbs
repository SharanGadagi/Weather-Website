<!DOCTYPE html>
<html lang="en">

<head>
 {{>head}}
</head>

<body>
  <!--navbar-->
  {{>navbar}}
  <!--main header-->
  <div class="container_fluid main_header">
    <div class="row">
      <div class="col-md-10 col-12  mx-auto">
        <div class="row">
          <!--left side div-->
          <div class="col-md-6 col-12 main_header_left">
            <p>Welcome to <b>DailyWeather</b> app </p>
            <h1>Get The Latest <span class="txt_clr"> Weather</span> condition Of Your City</h1>
            <a href="/weather"><button>Check Weather</button> </a>


          </div>
          <!--right side div-->
          <div class="col-md-6 col-12 main_header_right ">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class=" w-100 img1" src="images/551.png" alt="First slide">
                </div>
                <div class="carousel-item">
                  <img class=" w-100 img2" src="images/img112.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                  <img class=" w-100 img3" src="images/img222.png" alt="Third slide">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <!--footer-->
 {{>footer}}
</body>

</html>

